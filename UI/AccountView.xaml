<UserControl x:Class="UI.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d">

    <Grid
        x:Name="Root"
        MinWidth="600"
        MouseDown="OnMouseDown" 
        MouseLeave="OnMouseLeave" 
        MouseEnter="OnMouseEnter" 
        HorizontalAlignment="Center">
        <Label x:Name="Name" Content="Label" Background="#01FFFFFF" Margin="15,0,0,0" FontSize="15"/>

        <StackPanel HorizontalAlignment="Right" Margin="0,0,20,0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Content="See" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" Click="See_Click" Width="50" FontSize="15"/>
        </StackPanel>

    </Grid>
</UserControl>
